import itertools as it
from collections import Counter
dna_list = list(it.permutations(['A','C','G','T'],4))
dna = list(input())
new_dna = []
final_dna = []
i = 0
flag = False
cnt = 0
final_cnt = 0
while i != len(dna):
    if len(new_dna) < 4:
        new_dna.append(dna[i])
        i+=1
        continue
    if dna_list.count(tuple(new_dna)) > 0:
        if len(final_dna) > len(new_dna):
            new_dna.clear()
            continue
        cnt = dna_list.count(tuple(new_dna))
        final_dna.append(tuple(new_dna))
        final_cnt += cnt
        cnt = 0
        new_dna.clear()
        
    else:
        new_dna.clear()
        cnt = 0
        i-=3
if len(final_dna) > 1:
    counts = Counter(tuple(sublist) for sublist in final_dna)
    most_common_el,count = counts.most_common(1)[0]
    most_common_el = list(most_common_el)
    print(count*4)
    most_common_el = most_common_el*count
    for i in range(len(most_common_el)):
        print(most_common_el[i],end='')
else:
    print(4)
    for i in range(len(new_dna)):
        print(new_dna[i],end='')
